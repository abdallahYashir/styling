<div class="album py-5">
    <div class="row">

      <% @businesses.each do |business| %>
        <div class="col-md-4">
          <div class="card mb-4 box-shadow">
            <img class="card-img-top card-placeholder-size" src="http://via.placeholder.com/300x300" alt="Card image cap">
            <div class="card-body">
              <div class="card-title"><%= business.name %></div>
              <p class="card-text"><%= business.description %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to 'Show', business, class: 'btn btn-sm btn-outline-secondary' %>
                  <%= link_to "Edit", edit_business_path(business), class: 'btn btn-sm btn-outline-secondary' %>
                </div>
                <small class="text-muted">9 mins</small>
              </div>
            </div>
          </div>
        </div>
      <% end %>

    </div>
    <%= link_to 'New Business', new_business_path %>
    
</div>
