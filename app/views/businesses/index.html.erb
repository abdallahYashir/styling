<p id="notice"><%= notice %></p>

<h1>Businesses</h1>

<table class="table">
  <thead class="thead-default">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Active</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>Zipcode</th>
      <th>Phone no</th>
      <th>Mobile no</th>
      <th>Email</th>
      <th>Fax</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.name %></td>
        <td><%= business.description %></td>
        <td><%= business.active %></td>
        <td><%= business.address1 %></td>
        <td><%= business.address2 %></td>
        <td><%= business.zipcode %></td>
        <td><%= business.phone_no %></td>
        <td><%= business.mobile_no %></td>
        <td><%= business.email %></td>
        <td><%= business.fax %></td>
        <td><%= business.type %></td>
        <td><%= link_to 'Show', business %></td>
        <td><%= link_to 'Edit', edit_business_path(business) %></td>
        <td><%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

