<p id="notice"><%= notice %></p>

<h1>Hair Salons / Stylists</h1>

<div class="album py-5">
    <div class="row">

      <% @businesses.each do |business| %>
        <div class="col-md-4">
          <div class="card mb-4 box-shadow">
            <%= image_tag(business.images.first.photo.url, class: 'card-img-top img-fluid card-placeholder-size') if business.images.first.present? %>
            <% if business.images.first.nil? %>
              <img class="card-img-top img-fluid card-placeholder-size" src="http://via.placeholder.com/300x300" alt="Card image cap">
            <% end %>
            <div class="card-body">
              <div class="card-title"><%= business.name %></div>
              <p class="card-text"><%= business.description %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to 'Show', business, class: 'btn btn-sm btn-outline-secondary' %>
                  <%= link_to "Edit", edit_business_path(business), class: 'btn btn-sm btn-outline-secondary' %>
                </div>
                <small class="text-muted"><%= business.address1 %></small>
              </div>
            </div>
          </div>
        </div>
      <% end %>

    </div>
    <%= link_to 'New Business', new_business_path %>

</div>
